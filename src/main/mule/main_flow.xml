<?xml version="1.0" encoding="UTF-8"?>

<mule xmlns:ee="http://www.mulesoft.org/schema/mule/ee/core" xmlns:http="http://www.mulesoft.org/schema/mule/http"
	xmlns="http://www.mulesoft.org/schema/mule/core"
	xmlns:doc="http://www.mulesoft.org/schema/mule/documentation" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.mulesoft.org/schema/mule/core http://www.mulesoft.org/schema/mule/core/current/mule.xsd
http://www.mulesoft.org/schema/mule/http http://www.mulesoft.org/schema/mule/http/current/mule-http.xsd
http://www.mulesoft.org/schema/mule/ee/core http://www.mulesoft.org/schema/mule/ee/core/current/mule-ee.xsd">
	<http:request-config name="HTTP_Request_configuration" doc:name="HTTP Request configuration" doc:id="06d7a756-3f90-4b78-94fe-1a26fb748e47" >
		<http:request-connection protocol="HTTPS" host="kp-apiv2-auth.azurewebsites.net" />
	</http:request-config>
	<flow name="main_flowFlow" doc:id="043e146d-fd1f-4b68-a852-85e08099c495" >
		<set-variable value="#[[]]" doc:name="acc init" doc:id="22001d83-fb9c-4596-ac29-088ce1893ed1" variableName="acc"/>
		<foreach doc:name="For Each" doc:id="8591b50e-125e-43e3-befd-cbae01d84866" collection="#[message.payload]">
			<set-variable value="#[payload.quantity]" doc:name="Set Variable" doc:id="b60958bf-aee5-45a8-94c8-602de394afba" variableName="quantity"/>
			<http:request method="GET" doc:name="Request" doc:id="c25f1019-aaec-426f-8aef-f343fa26a185" config-ref="HTTP_Request_configuration" path="#['/api/v2/products/' ++ (payload.productId)]">
		</http:request>
			<ee:transform doc:name="Transform Message" doc:id="7a32a1b7-551a-46d7-aafc-531669702179" >
				<ee:message >
					<ee:set-payload ><![CDATA[%dw 2.0
output application/json
---
// tutaj zmapować to co dostanę z requesta do takiej postaci
 {
      "productId": 0,
      "productCategoryId": 0,
      "quantity": 0,
      "sizeId": 0,
      "ingredients": [
        {
          "productID": 0,
          "ingredientID": 0,
          "quantity": 0,
          "isForced": true,
          "isDisabled": true
        }
      ],
      "itemPrice": 0,
      "name": "string",
}]]></ee:set-payload>
				</ee:message>
			</ee:transform>
			<set-variable value="#[output application/json
---
vars.acc &lt;&lt; payload
// appenduję payload czyli to co zostało przetransformowane z requesta]" doc:name="override acc" doc:id="6795764f-66e5-41f7-82a8-5e030fce59d3" variableName="acc"/>
			<logger level="INFO" doc:name="Logger" doc:id="e8bd5174-5149-454b-9708-98b6c7c1ce46" message="#[vars.acc]"/>
		</foreach>
		<logger level="INFO" doc:name="Logger" doc:id="4c7dc622-6238-4f19-9063-31678f347376" />
		<ee:transform doc:name="Transform Message" doc:id="4485a235-2267-427c-b5fa-ba525ae8e0b3" >
			<ee:message >
				<ee:set-payload ><![CDATA[%dw 2.0
output application/json
---
{
	orderItems: vars.acc ,
	grandTotal: vars.acc reduce (curr, acc = 0) -> acc + (curr.itemPrice * curr.quantity) as Number
}]]></ee:set-payload>
			</ee:message>
		</ee:transform>
	</flow>
</mule>
